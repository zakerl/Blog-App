<% include ../partials/header %>

<h1><%= user.username %>'s profile</h1>

<div class="ui two column grid">
    <div class="column">
      <div class="ui cards">
        <div class="card">
            <div class="image">
              <img src="<%= user.avatar %>" style="width: 290px; height: 290px">
            </div>
            <div class="content">
              <div class="header"><%= user.firstname %> <%= user.lastname %></div>
              <div class="meta">
                <a></a>
              </div>
              <div class="description">
                <!-- Add description -->
              </div>
            </div>
            <div class="extra content">
              <span class="right floated">
                <!-- Add date -->
              </span>
              <span>
                <i class="book icon"></i>
                <%= blogs.length %> blogs
              </span>
        </div>
      </div>
    </div>
</div>
<div class="ui one column grid" style="background-color: white;margin-top: 15px">
  <div class="ui cards"></div>
    <h2>Blogs</h2>
    <div class="column">
        <% blogs.forEach(function(blog){ %>
          <a href="/blogs/<%=blog.id%>"><h4><%= blog.title %></h4></a>
          <hr>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>
