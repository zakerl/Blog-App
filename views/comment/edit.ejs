<% include ../partials/header %>
<div class="ui main text container segment" style="margin-top: 40px">
    <div class="ui huge header centered">Add a comment</div>
    <form class="ui form" action="/blogs/<%= blogid %>/comments/<%=comment._id %>/?_method=PUT" method="POST">
        <div class="field">
                <label>Image</label>
                <input type="text" name="comment[image]" value="<%=comment.image%>">
        </div>
        <div class="field">
            <label>Text</label>
            <input type="text" name="comment[text]" value="<%=comment.text%>">
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ../partials/footer %>

